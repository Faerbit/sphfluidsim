#version 430

layout(local_size_x = $THREAD_SIZE, local_size_y = 1, local_size_z = 1) in;

layout(std430, binding = 0) buffer Positions{
    vec4 elements[];
} positions;

uniform float time;
uniform int work_items;

void main() {
    uint ident = gl_GlobalInvocationID.x;
    if (ident <= work_items) {
        positions.elements[ident].y = sin(time);
    }
}
